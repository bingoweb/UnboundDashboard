<Window x:Class="UnboundDashboard.LoginDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Baƒülantƒ± Ayarlarƒ±"
        Width="520" Height="560"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        TextElement.Foreground="#f1f5f9"
        TextElement.FontFamily="Segoe UI">

    <Window.Background>
        <SolidColorBrush Color="Transparent"/>
    </Window.Background>

    <Window.Resources>
        <!-- Login TextBox Style -->
        <Style x:Key="LoginTextBoxStyle" TargetType="TextBox">
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Style.Resources>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="Background" Value="#0a1020"/>
            <Setter Property="Foreground" Value="#f1f5f9"/>
            <Setter Property="BorderBrush" Value="#1e293b"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CaretBrush" Value="#22d3ee"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#475569"/>
                </Trigger>
                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#22d3ee"/>
                    <Setter Property="Background" Value="#0f1d32"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Login PasswordBox Style -->
        <Style x:Key="LoginPasswordBoxStyle" TargetType="PasswordBox">
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Style.Resources>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="Background" Value="#0a1020"/>
            <Setter Property="Foreground" Value="#f1f5f9"/>
            <Setter Property="BorderBrush" Value="#1e293b"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CaretBrush" Value="#22d3ee"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#475569"/>
                </Trigger>
                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#22d3ee"/>
                    <Setter Property="Background" Value="#0f1d32"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- Outer shadow wrapper -->
    <Border CornerRadius="20" Margin="20"
            BorderThickness="1">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#22d3ee" Offset="0"/>
                <GradientStop Color="#1a2744" Offset="0.4"/>
                <GradientStop Color="#a78bfa" Offset="0.8"/>
                <GradientStop Color="#1a2744" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#080d1a" Offset="0"/>
                <GradientStop Color="#0c1530" Offset="0.5"/>
                <GradientStop Color="#0a0f22" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" BlurRadius="40" Color="#22d3ee" Opacity="0.15"/>
        </Border.Effect>

        <Grid Margin="32,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title bar with close -->
            <Grid Grid.Row="0" Margin="0,0,0,20" MouseLeftButtonDown="OnDrag">
                <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                    <TextBlock FontSize="20" FontWeight="Bold">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#22d3ee" Offset="0"/>
                                <GradientStop Color="#a78bfa" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                        üîê SSH Baƒülantƒ±sƒ±
                    </TextBlock>
                    <TextBlock Text="Sunucu bilgilerini girin" FontSize="11" Foreground="#64748b" Margin="0,4,0,0"/>
                </StackPanel>
                <Button Content="‚úï" HorizontalAlignment="Right" VerticalAlignment="Top"
                        Background="Transparent" Foreground="#64748b" BorderThickness="0"
                        FontSize="16" Cursor="Hand" Click="OnCancel" Padding="4"
                        AutomationProperties.Name="Kapat"/>
            </Grid>

            <!-- Hostname -->
            <TextBlock Grid.Row="1" Text="SUNUCU ADRESƒ∞" FontSize="10" FontWeight="Bold"
                       Foreground="#64748b" Margin="0,0,0,6"/>
            <TextBox Grid.Row="2" x:Name="TxtHostname"
                     AutomationProperties.Name="Sunucu Adresi"
                     Margin="0,0,0,14"
                     Style="{StaticResource LoginTextBoxStyle}" />

            <!-- Port + Username row -->
            <Grid Grid.Row="3" Margin="0,0,0,14">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="14"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="PORT" FontSize="10" FontWeight="Bold"
                               Foreground="#64748b" Margin="0,0,0,6"/>
                    <TextBox x:Name="TxtPort"
                             AutomationProperties.Name="Port"
                             Style="{StaticResource LoginTextBoxStyle}" />
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="KULLANICI ADI" FontSize="10" FontWeight="Bold"
                               Foreground="#64748b" Margin="0,0,0,6"/>
                    <TextBox x:Name="TxtUsername"
                             AutomationProperties.Name="Kullanƒ±cƒ± Adƒ±"
                             Style="{StaticResource LoginTextBoxStyle}" />
                </StackPanel>
            </Grid>

            <!-- Password -->
            <TextBlock Grid.Row="4" Text="≈ûƒ∞FRE" FontSize="10" FontWeight="Bold"
                       Foreground="#64748b" Margin="0,0,0,6"/>
            <PasswordBox Grid.Row="5" x:Name="TxtPassword"
                         AutomationProperties.Name="≈ûifre"
                         Margin="0,0,0,14"
                         Style="{StaticResource LoginPasswordBoxStyle}" />

            <!-- Remember checkbox -->
            <CheckBox Grid.Row="6" x:Name="ChkRemember"
                      AutomationProperties.Name="≈ûifreyi Hatƒ±rla"
                      Content="  ≈ûifreyi hatƒ±rla (appsettings.json'a kaydet)"
                      IsChecked="True" Foreground="#94a3b8" FontSize="11"
                      Margin="0,0,0,16"/>

            <!-- Status message -->
            <Border Grid.Row="7" x:Name="StatusBorder" CornerRadius="10"
                    Padding="14,8" Margin="0,0,0,14" Visibility="Collapsed"
                    BorderThickness="1">
                <TextBlock x:Name="TxtStatus" FontSize="11" TextWrapping="Wrap"/>
            </Border>

            <!-- Spacer -->
            <Grid Grid.Row="9"/>

            <!-- Buttons -->
            <Grid Grid.Row="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Test Connection -->
                <Button Grid.Column="0" Content="üîç Baƒülantƒ±yƒ± Test Et"
                        Click="OnTestConnection"
                        FontWeight="Bold" FontSize="12" Foreground="White"
                        Padding="0,14" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bd" CornerRadius="10" Padding="{TemplateBinding Padding}"
                                    BorderBrush="#162d4a" BorderThickness="2">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#0c1a2e" Offset="0"/>
                                        <GradientStop Color="#0f2240" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bd" Property="BorderBrush" Value="#22d3ee"/>
                                </Trigger>
                                <Trigger Property="IsKeyboardFocused" Value="True">
                                    <Setter TargetName="bd" Property="BorderBrush" Value="#22d3ee"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Save & Connect -->
                <Button Grid.Column="2" Content="‚ö° Kaydet ve Baƒülan"
                        Click="OnSaveConnect"
                        FontWeight="Bold" FontSize="12" Foreground="White"
                        Padding="0,14" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bd" CornerRadius="10" Padding="{TemplateBinding Padding}"
                                    BorderBrush="Transparent" BorderThickness="2">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#059669" Offset="0"/>
                                        <GradientStop Color="#34d399" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="0" BlurRadius="16" Color="#34d399" Opacity="0.3"/>
                                </Border.Effect>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bd" Property="Opacity" Value="0.85"/>
                                </Trigger>
                                <Trigger Property="IsKeyboardFocused" Value="True">
                                    <Setter TargetName="bd" Property="Opacity" Value="0.85"/>
                                    <Setter TargetName="bd" Property="BorderBrush" Value="#ffffff"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>
